          <%=image_tag 'home/pineapple.png', :class => 'footer_logo' %>
        </div>
        <div class="col-sm-12">
          <ul class="quick-links">
            <li><%= link_to 'Faq', venues_faq_path %></li>
            <li><%= link_to 'Press Kit', presskit_path %></li>
            <li><%= link_to 'Terms', terms_path %></li>
            <li><p class="copyright">© Grotto 2015 <a href="#">Privacy Policy</a></p></li>
          </ul>    
        </div>
        <div class="col-sm-12"></div>         
      </div>  
    </div>     
</footer>
<!--/Site wrap-->
